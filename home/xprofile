# IME settings
export XMODIFIERS=@im=fcitx
export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx

# Locale
export LANG=zh_CN.UTF8
export LC_ALL=zh_CN.UTF-8

# Install directory
export INSTALLDIR="$HOME/software"

# Default editor
export EDITOR=vim
export VISUAL=$EDITOR

# Used for virtualbox
export VBOX_USB=usbfs

# Nasm environment
export NASMENV="-i /home/aetf/Develop/ASM/inc"
export NASM=$NASMENV

# Predefined variables to Java runtime
export _JAVA_OPTIONS="-Dawt.useSystemAAFontSettings=on -Dswing.aatext=true"

# Ccache directory
export CCACHE_DIR=/opt/.ccache
export CCACHE_COMPRESS

# MATLAB
export MATLAB_JAVA=/usr/lib/jvm/java-7-jre/jre/
export MATLABPATH="$HOME/develop/matlab"

# XDG variables
export XDG_CONFIG_HOME="$HOME/.config"

# More PATH
## Prepend user's bin directory to PATH
PATH="$HOME/customizations/scripts:$PATH"
## more in INSTALLDIR
if [ -d $INSTALLDIR ]; then
    for dir in $INSTALLDIR/*; do
        if [ -d "$dir" -a `basename $dir` != "src" ]; then
            PATH="$PATH:$dir"
            if [ -d "$dir/bin" ]; then
                PATH="$PATH:$dir/bin"
            fi
        fi
    done
fi
## Node.js executable
PATH="$PATH:$HOME/.node_modules/bin"
## Local bin directory
PATH="$PATH:$HOME/.local/bin"

export PATH
