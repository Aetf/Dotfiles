server {
	listen 80;
	listen [::]:80;
	server_name unlimitedcodeworks.xyz www.unlimitedcodeworks.xyz;

	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	server_name unlimitedcodeworks.xyz www.unlimitedcodeworks.xyz;

	access_log /var/log/nginx/sites/blog.access netdata;
	error_log /var/log/nginx/sites/blog.error error;
	rewrite_log on;

    include snippets/cert/unlimitedcodeworks.xyz.conf;

    include sites-common/blog;
}

server {
	listen 80;
	listen [::]:80;
	server_name unlimited-code.works www.unlimited-code.works;

	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	server_name unlimited-code.works www.unlimited-code.works;

	access_log /var/log/nginx/sites/blog.access netdata;
	error_log /var/log/nginx/sites/blog.error error;
	rewrite_log on;

    include snippets/cert/unlimited-code.works.conf;

    include sites-common/blog;
}
