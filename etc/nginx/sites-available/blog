server {
	listen 80;
	listen [::]:80;
	server_name unlimitedcodeworks.xyz www.unlimitedcodeworks.xyz;

	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	server_name unlimitedcodeworks.xyz www.unlimitedcodeworks.xyz;

	access_log /var/log/nginx/sites/blog.access netdata;
	error_log /var/log/nginx/sites/blog.error error;
	rewrite_log on;

	root /srv/http/blog;

	location / {
	}

	error_page 404 /404.html;

	# redirect server error pages to the static page /50x.html
	#
	#error_page 500 502 503 504 /50x.html;
	#location = /50x.html {
	#	root /usr/share/nginx/html;
	#}
}
