server {
	listen 80;
	listen [::]:80;
	server_name jiahui.love;

	return 301 https://jiahui.love$request_uri;
}

server {
	listen 443 ssl;
	listen [::]:443 ssl;
	server_name jiahui.love;
	keepalive_timeout 70;

	ssl_certificate /etc/letsencrypt/live/jiahui.love/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/jiahui.love/privkey.pem;

	access_log /var/log/nginx/sites/jiahui.access;
	error_log /var/log/nginx/sites/jiahui.error error;
	rewrite_log on;

	root /srv/http/door-jiahui;

	location / {
	}

	error_page 404 /404.html;

	# redirect server error pages to the static page /50x.html
	#
	#error_page 500 502 503 504 /50x.html;
	#location = /50x.html {
	#	root /usr/share/nginx/html;
	#}
}
