server {
	listen 80;
	listen [::]:80;
	server_name btsync.unlimitedcodeworks.xyz;

	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	server_name btsync.unlimitedcodeworks.xyz;

	access_log /var/log/nginx/sites/syncthing.access netdata;
	error_log /var/log/nginx/sites/syncthing.error error;

    include snippets/cert/unlimitedcodeworks.xyz.conf;

    include sites-common/syncthing;
}

server {
	listen 80;
	listen [::]:80;
	server_name sync.unlimited-code.works;

	return 301 https://$server_name$request_uri;
}

