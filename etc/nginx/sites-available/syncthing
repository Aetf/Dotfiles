server {
	listen 80;
	listen [::]:80;
	server_name btsync.unlimitedcodeworks.xyz;

	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	server_name btsync.unlimitedcodeworks.xyz;

	access_log /var/log/nginx/sites/syncthing.access;
	error_log /var/log/nginx/sites/syncthing.error error;

	limit_req zone=two burst=100 nodelay;

	root /var/websites/fallback;
	location /robots.txt {
	}

	location / {
		# Syncthing will reject non-local host header when listening on localhost only
		#proxy_set_header Host $host;
		proxy_set_header Host "localhost";
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;

		proxy_read_timeout 5m;

		proxy_pass http://localhost:8384;
	}
}
