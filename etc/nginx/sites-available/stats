# Default server configuration
#
server {
	listen 80;
	listen [::]:80;
	server_name stats.archvps.unlimitedcodeworks.xyz archvps.stats.unlimited-code.works;

	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	server_name stats.archvps.unlimitedcodeworks.xyz archvps.stats.unlimited-code.works;

	ssl_certificate /etc/letsencrypt/live/archvps.unlimitedcodeworks.xyz/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/archvps.unlimitedcodeworks.xyz/privkey.pem;

	keepalive_requests 10;
	keepalive_timeout 60 60;

	access_log /var/log/nginx/sites/stats.access netdata;
	error_log /var/log/nginx/sites/stats.error error;

	root /var/websites/fallback;
	location /robots.txt {
	}

	location / {
		auth_basic "Aetf-ArchVPS's NetData Monitoring";
		auth_basic_user_file /etc/nginx/passwords;

		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;

		proxy_read_timeout 5m;
		proxy_send_timeout 5m;

		proxy_pass http://unix:/var/run/netdata/netdata.sock;
	}
}
