# Default server configuration
#
server {
	listen 80;
	listen [::]:80;
	server_name files.unlimitedcodeworks.xyz;

	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl;
	listen [::]:443 ssl;
	server_name files.unlimitedcodeworks.xyz;

	keepalive_requests 10;
	keepalive_timeout 60 60;

	ssl_certificate /etc/letsencrypt/live/unlimitedcodeworks.xyz/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/unlimitedcodeworks.xyz/privkey.pem;

	access_log /var/log/nginx/sites/pydio.access;
	error_log /var/log/nginx/sites/pydio.error error;

	client_max_body_size 2G;
	client_body_buffer_size 128k;

	index index.php;
	root /srv/http/pydio;
	if ( !-e $request_filename ) {
		rewrite ^(.*)$ /index.php break;
	}

	# Prevent access to some sensitive place
	location ^~ /conf/ { deny all; }
	location ^~ /data/ { deny all; }

	# Prevent Clickjacking
	add_header X-Frame-Options "SAMEORIGIN";

	# Only allow these request methods and do not accept DELETE, SEARCH and other methods
	if ( $request_method !~ ^(GET|HEAD|POST|PROPFIND|OPTIONS)$ ) {
		return 444;
	}

	location = /robots.txt { access_log off; log_not_found off; }
	location = /favicon.ico { access_log off; log_not_found off; }


	# pass the PHP scripts to FastCGI server
	location ~ \.php$ {
		# for ^/(index|plugins) request_uri should be changed
		include snippets/fastcgi-php.conf;
		fastcgi_param REQUEST_URI $request_uri;

		fastcgi_keep_conn on;
		fastcgi_buffering off;
		proxy_buffering off;

		# With php-fpm:
		fastcgi_pass unix:/run/php/php-fpm.sock;
	}

	# Enables Caching
	location ~* \.(ico|css|js)$ {
		expires 7d;
		add_header Pragma public;
		add_header Cache-Control "public, must-revalidate, proxy-revalidate";
	}
}
